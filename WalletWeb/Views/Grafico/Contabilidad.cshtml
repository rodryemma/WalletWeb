@using Newtonsoft.Json
@{
    ViewData["Title"] = "Gráfico de contabilidad";
    var diccionario = null as Dictionary<string, Dictionary<string, bool>>;
}

<h4 class="mb-2 pb-2 fw-semibold text-secondary">@ViewData["Title"]</h4>

<div class="p-3 bg-white border rounded shadow-sm mb-4">
    <h6 class="mb-3 fw-semibold text-secondary">Filtrar</h6>

    <div class="row g-3">

        <div class="col-sm-3">
            <div class="p-2 bg-light border rounded shadow-sm d-flex align-items-center">
                <span class="text-muted small">Por movimiento</span>
                    <select id="tipoMovimientoSelect" class="form-select form-select-sm w-auto ms-2">
                        <option value="total">Total</option>
                        <option value="gastos">Gastos</option>
                        <option value="ingresos">Ingresos</option>
                    </select>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="p-2 bg-light border rounded shadow-sm d-flex align-items-center">
                <div class="text-muted small mb-2">Por categoría</div>
                <div class="mt-auto">    
                    <button class="btn-crear btn btn-sm btn-outline-primary w-auto d-inline-block ms-2"
                            id="btn-CategoriaSelect">
                        <i class="bi bi-check2-square"></i> Seleccionar categorias
                    </button>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="p-2 bg-light border rounded shadow-sm d-flex align-items-center flex-wrap gap-2">
                <div class="text-muted small">Por fecha</div>
                <label class="small fw-bold mb-0">Desde:</label>
                <input type="date" id="fechaDesde" class="form-control form-control-sm w-auto">
                <label class="small fw-bold mb-0">Hasta:</label>
                <input type="date" id="fechaHasta" class="form-control form-control-sm w-auto">
            </div>
        </div>

    </div>

</div>

<div class="container">
    <h5 class="fw-semibold text-secondary">Reporte de contabilidad</h5>

    <div class="chart-container">
        <canvas id="contabilidadChart"></canvas>
    </div>
</div>


<!-- Modal de Filtro Check Categoria -->
<!-- Área donde se mostrarán las selecciones -->
<div id="seleccionActual" class="mt-3">
    <h6>Categorías Seleccionadas:</h6>
    <div id="listaSeleccionadas"></div>
</div>

<!-- Modal categoría -->
<div class="modal fade" id="modalCategorias" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar Categorías</h5>
                <button type="button" class="close btn-crear btn btn-sm btn-outline-primary w-auto d-inline-block ms-2" onclick="cerrarModalCategoria()" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Contenido dinámico -->
                <div id="loadingModal" class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Cargando...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <span id="contadorSeleccionados" class="mr-auto text-muted"></span>
                <button type="button" class="btn-crear btn btn-sm btn-outline-danger w-auto d-inline-block ms-2" onclick="cerrarModalCategoria()" data-dismiss="modal">
                    <i class="bi bi-x"></i>
                    Cancelar
                </button>
                <button type="button" class="btn-crear btn btn-sm btn-outline-primary w-auto d-inline-block ms-2" onclick="aplicarCambios()">
                    <i class="bi bi-check"></i>
                    Aplicar Cambios                    
                </button>
            </div>
        </div>
    </div>
</div>


@section Styles {
   @*  <link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.min.css"> *@
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>

        document.addEventListener("DOMContentLoaded", async () => {
            cargarDateDesdeHasta();
            cargarGraficoContabilidad();

            cargarModalConDiccionario(diccionarioCategoriaGlobal);
            aplicarCambios()
        });


        // Región: Cargar Date Desde y Hasta
        function cargarDateDesdeHasta(){
            const hoy = new Date();
            const fechaHasta = hoy.toISOString().split('T')[0];
            const unMesAntes = new Date(hoy);

            unMesAntes.setMonth(unMesAntes.getMonth() - 6);
            unMesAntes.setDate(1);

            const fechaDesde = unMesAntes.toISOString().split('T')[0];

            document.getElementById('fechaDesde').value = fechaDesde;
            document.getElementById('fechaHasta').value = fechaHasta;
        }

        //Recargar Chart por cambio fecha
        $('#fechaDesde, #fechaHasta').on('change', function () {
                cargarGraficoContabilidad();
            });

        //Recargar Chart por tipomovimiento
        $('#tipoMovimientoSelect').change(function () {
            cargarGraficoContabilidad();
        });

        //Recargar Chart por fecha desde anterior
        let fechaInicial = new Date(document.getElementById('fechaDesde').value);

        document.getElementById('fechaDesde').addEventListener('change', function () {
            const nuevaFechaStr = this.value;
            if (!nuevaFechaStr) return;

            const nuevaFecha = new Date(nuevaFechaStr);

            if (nuevaFecha < fechaInicial) {
                fechaInicial = nuevaFecha;
                cargarGraficoContabilidad();
            }
        });


        let contabilidadChart = null;
        // Diccionario global que se mantiene en la vista
        var diccionarioCategoriaGlobal = {};

        async function cargarGraficoContabilidad() {

            const tipoMovimiento = $('#tipoMovimientoSelect').val();
            const fecha = $('#fechaDesde').val();
            
            const data = {
                    TipoMovimiento: tipoMovimiento,
                    Fecha: fecha,
                    CategoriaFiltro: diccionarioCategoriaGlobal
            };

            try  {
                    const url = `/reportes/contabilidad/barra`
                    const response = await apiRequest(url, "POST", data);
                    diccionarioCategoriaGlobal = response.diccionarioCategoria;

                    const result = response.chart;

                    const datasets = result.series.map(s => ({
                        label: s.label,
                        data: s.data,
                        borderWidth: 2,
                        tension: 0.4
                    }));

                    const ctx = document.getElementById('contabilidadChart');
                    if (!ctx) return;

                    if (contabilidadChart) {
                        contabilidadChart.destroy();
                    }

                    contabilidadChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: result.labels,
                            datasets: datasets
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                              y: {
                                beginAtZero: true
                              }
                            }
                        }
                    });

                } catch(error) {
                     console.error('Error al guardar:', error);
                } finally {

                }
        }


        function formatearFecha(fechaIso) {
            const fecha = new Date(fechaIso);
            return fecha.toLocaleDateString('es-AR', {
                day: '2-digit',
                month: '2-digit'
            });
        }


        //-------Modal ------//


        $('#btn-CategoriaSelect').click(function() {
            cargarModalConDiccionario(diccionarioCategoriaGlobal);
            $('#modalCategorias').modal('show');
        });

        function cerrarModalCategoria() {
            $('#modalCategorias').modal('hide');
        }

        // Función para cargar el modal dinámicamente
            function cargarModalConDiccionario(diccionario) {
            if (!diccionario || Object.keys(diccionario).length === 0) {
                $('#modalCategorias .modal-body').html('<p class="text-muted">No hay categorías disponibles</p>');
                return;
            }

            let modalHTML = '';

            for (let tipo in diccionario) {
                const tipoCapitalize= tipo.charAt(0).toUpperCase() + tipo.slice(1).toLowerCase();
                modalHTML += `
                    <div class="categoria-section mb-6">
                        <h5 class="border-bottom pb-2 mb-3">
                            ${tipoCapitalize}
                            <small class="float-right">
                                <a href="#" onclick="seleccionarTodos('${tipo.replace(/ /g, '_')}', true); return false;">Todos</a> |
                                <a href="#" onclick="seleccionarTodos('${tipo.replace(/ /g, '_')}', false); return false;">Ninguno</a>
                            </small>
                        </h5>
                        <div class="row categoria-grupo" data-tipo="${tipo.replace(/ /g, '_')}">
                `;

                for (let nombre in diccionario[tipo]) {
                    let checked = diccionario[tipo][nombre] ? 'checked' : '';
                    let id = `${tipo.replace(/ /g, '_')}_${nombre.replace(/ /g, '_')}`;

                    modalHTML += `
                        <div class="col-md-6 mb-2">
                            <div class="form-check">
                                <input class="form-check-input checkbox-categoria"
                                       type="checkbox"
                                       id="${id}"
                                       data-tipo="${tipo}"
                                       data-nombre="${nombre}"
                                       ${checked}
                                       onchange="actualizarContador()" />
                                <label class="form-check-label" for="${id}">
                                    ${nombre}
                                </label>
                            </div>
                        </div>
                    `;
                }

                modalHTML += `
                        </div>
                    </div>
                `;
            }

            $('#modalCategorias .modal-body').html(modalHTML);
            actualizarContador();
        }

        // Seleccionar o deseleccionar todos de una sección
        function seleccionarTodos(tipoId, seleccionar) {
            $('.categoria-grupo[data-tipo="' + tipoId + '"] input[type="checkbox"]').prop('checked', seleccionar);
            // actualizarContador();
        }

        // Actualizar contador de seleccionados
        function actualizarContador() {
            var total = $('.checkbox-categoria:checked').length;
            $('#contadorSeleccionados').text(total + ' categoría(s) seleccionada(s)');
        }

        // Aplicar cambios y actualizar diccionario
        function aplicarCambios() {
        // Reconstruir diccionario con nuevos valores
            var diccionarioActualizado = {};

            $('.checkbox-categoria').each(function() {
                var tipo = $(this).data('tipo');
                var nombre = $(this).data('nombre');
                var checked = $(this).is(':checked');

                if (!diccionarioActualizado[tipo]) {
                    diccionarioActualizado[tipo] = {};
                }

                diccionarioActualizado[tipo][nombre] = checked;
            });

            // Actualizar diccionario global
            // diccionarioActual = diccionarioActualizado;
            diccionarioCategoriaGlobal = diccionarioActualizado;

            // Actualizar la vista con las selecciones
            mostrarSelecciones();

            // Cerrar modal
            $('#modalCategorias').modal('hide');

            // Opcional: Recargar el gráfico con el filtro aplicado
            // aplicarFiltroAlGrafico(diccionarioActual);
            cargarGraficoContabilidad();
        }

        
        // Mostrar las categorías seleccionadas
        function mostrarSelecciones() {
            var html = '<ul class="list-group">';
            var tieneSelecciones = false;

            for (var tipo in diccionarioCategoriaGlobal) {
                var nombresSeleccionados = [];

                for (var nombre in diccionarioCategoriaGlobal[tipo]) {
                    if (diccionarioCategoriaGlobal[tipo][nombre]) {
                        nombresSeleccionados.push(nombre);
                    }
                }

                if (nombresSeleccionados.length > 0) {
                    tieneSelecciones = true;
                    html += '<li class="list-group-item">';
                    html += '<strong>' + tipo + ':</strong> ' + nombresSeleccionados.join(', ');
                    html += '</li>';
                }
            }

            html += '</ul>';

            if (!tieneSelecciones) {
                html = '<p class="text-muted">No hay categorías seleccionadas</p>';
            }

            $('#listaSeleccionadas').html(html);
        }
    </script>
}
